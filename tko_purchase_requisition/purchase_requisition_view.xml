<openerp>
    <data>
        <record id="purchase_requisition_form_inherit" model="ir.ui.view">
            <field name="name">purchase.requisition</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <button string="Request a Quotation"  position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
                <button name="purchase_cancel"  position="attributes">
                    <attribute name="states">draft,sent,bid</attribute>
                </button>
                <button name="purchase_confirm"  position="attributes">
                    <attribute name="states">draft,sent,bid</attribute>
                </button>
                <button name="wkf_send_rfq"  position="attributes">
                    <attribute name="states">draft</attribute>
                </button>
                <field name="picking_type_id" position="after">
                    <field name="parent_id" attrs="{'invisible': [('parent_id','=',False)]}"/>
                </field>
                <button string="Request a Quotation" position="after">
                    <button name="send_mail_to_all_quotations" type="object" string="Send mail to All"
                     attrs="{'invisible': ['|', ('purchase_ids','=',[]),('state', 'in', ('draft' ,'open','done'))]}"/>
                </button>
                <notebook position="inside">
                    <page name="child_ids" string="Origin" attrs="{'invisible':[('child_ids','=',[])]}">
                        <field name="child_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="origin"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
