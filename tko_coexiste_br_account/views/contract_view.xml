<odoo>
    <record id="account_analytic_account_recurring_form_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.account</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="parent_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="journal_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="pricelist_id" position="after">
                <field name="expense_type_id" domain="[('expense_type','in',['c','b'])]"/>
                <field name="payment_mode_id" domain="[('company_id','=',company_id)]"/>
            </field>
        </field>
    </record>
</odoo>
